pipeline {
    agent any
    stages {
        stage('Restore Dependencies') {
            steps {
                echo 'Restoring dependencies...'
                sh 'dotnet restore'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'dotnet build --configuration Release'
            }
        }
        
        stage('Publish') {
            steps {
                echo 'Publishing the project...'
                sh 'dotnet publish --configuration Release --output ./publish'
            }
        }
    }
}
